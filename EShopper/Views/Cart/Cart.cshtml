
@{
    ViewBag.Title = "Sepet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href=@Url.Action("Index", "Home") class="active">AnaSayfa</a></li>
                <li class="active">Sepetim</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Ürün:</td>
                        <td class="description">Ürün Açıklaması:</td>
                        <td class="price">Fiyat:</td>
                        <td class="quantity">Adet:</td>
                        <td class="total">Toplam:</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.CartList)
                    {
                        <tr>
                            <td class="cart_product">
                                <img src="@item.ImagePath" width="100" height="100" alt="" />
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@item.ProductName</a></h4>
                                <p>@item.ProductGuid</p>
                            </td>
                            <td class="cart_price">
                                <p>@item.Price</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a class="cart_quantity_up"  href="" onclick="Dumenden();"> + </a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="@item.Quantity" autocomplete="off" size="2">
                                    <a class="cart_quantity_down" href=""> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">@item.Price*@item.Quantity</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4">&nbsp;</td>
                        <td colspan="2">
                            <table class="table table-condensed total-result">
                                <tr>
                                    <td>Sepet Toplamı</td>
                                    <td>59TL</td>
                                </tr>
                                <tr>
                                    <td>Kargo Ücreti</td>
                                    <td>20TL</td>
                                </tr>
                                <tr>
                                    <td>Toplam</td>
                                    <td><span>79TL</span></td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            @*<a class="btn btn-primary">Sipariş Ver</a>*@
        </div>
        <div class="payment-options">
            <span>
                <label><input type="checkbox"> Havale/EFT İle Ödeme</label>
            </span>
            <span>
                <label><input type="checkbox"> Kapıda Ödeme</label>
            </span>
            <span>
                <label><input type="checkbox"> Kredi Kartı İle Ödeme</label>
            </span>
        </div>

        <div class="shopper-informations">
            <div class="row">
                <div class="col-sm-3">
                    <div class="shopper-info">
                        <p>Shopper Information</p>
                        <form>
                            <input type="text" placeholder="İsim Soyisim">
                            <input type="text" placeholder="Mail Adresi">
                            <input type="password" placeholder="Şifre">
                            <input type="password" placeholder="Şifre Onayla">
                        </form>
                    </div>
                </div>
                <div class="col-sm-5 clearfix">
                    <div class="bill-to">
                        <p>Fatura</p>
                        <div class="form-one">
                            <form>
                                <input type="text" placeholder="Şirket İsmi (İsteğe Bağlı)">
                                <input type="text" placeholder="Email *">
                                <input type="text" placeholder="Meslek(İsteğe Bağlı)">
                                <input type="text" placeholder="Birinci İsim *">
                                <input type="text" placeholder="Varsa İkinci İsim">
                                <input type="text" placeholder="Soyisim *">
                                <input type="text" placeholder="Birincil Adres  *">
                                <input type="text" placeholder="İkincil Adres *">
                            </form>
                        </div>
                        <div class="form-two">
                            <form>
                                <input type="text" placeholder="Posta Kodu *">
                                <select>
                                    <option>-- Ülke --</option>
                                    <option>TÜRKİYE</option>
                                    <option>United States</option>
                                    <option>Bangladesh</option>
                                    <option>UK</option>
                                    <option>India</option>
                                    <option>Pakistan</option>
                                    <option>Ucrane</option>
                                    <option>Canada</option>
                                    <option>Dubai</option>
                                </select>
                                <select>
                                    <option>-- Şehir --</option>
                                    <option>ANKARA</option>
                                    <option>İSTANBUL</option>
                                    <option>KOCAELİ</option>
                                    <option>RİZE</option>
                                    <option>BURSA</option>
                                    <option>SAKARYA</option>
                                    <option>İZMİR</option>
                                    <option>ANTALYA</option>
                                </select>
                                <input type="password" placeholder="Şifreyi Onayla">
                                <input type="text" placeholder="İş Yeri Telefonu (İsteğe Bağlı) ">
                                <input type="text" placeholder="Cep Telefonu*">
                                <input type="text" placeholder="Fax">
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="order-message">
                        <p>Alışveriş Siparişi</p>
                        <textarea name="message" placeholder="Siparişinizle ilgili notlar, Teslimata İlişkin Özel Notlar" rows="16"></textarea>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
























