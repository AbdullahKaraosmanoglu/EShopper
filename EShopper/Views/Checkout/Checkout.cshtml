        <div class="payment-options">
            <span>
                <label><input type="checkbox"> Direct Bank Transfer</label>
            </span>
            <span>
                <label><input type="checkbox"> Check Payment</label>
            </span>
            <span>
                <label><input type="checkbox"> Paypal</label>
            </span>
        </div>

        <div class="shopper-informations">
            <div class="row">
                <div class="col-sm-3">
                    <div class="shopper-info">
                        <p>Shopper Information</p>
                        <form>
                            <input type="text" placeholder="İsim Soyisim">
                            <input type="text" placeholder="Mail Adresi">
                            <input type="password" placeholder="Şifre">
                            <input type="password" placeholder="Şifre Onayla">
                        </form>
                    </div>
                </div>
                <div class="col-sm-5 clearfix">
                    <div class="bill-to">
                        <p>Fatura</p>
                        <div class="form-one">
                            <form>
                                <input type="text" placeholder="Şirket İsmi (İsteğe Bağlı)">
                                <input type="text" placeholder="Email *">
                                <input type="text" placeholder="Meslek(İsteğe Bağlı)">
                                <input type="text" placeholder="Birinci İsim *">
                                <input type="text" placeholder="Varsa İkinci İsim">
                                <input type="text" placeholder="Soyisim *">
                                <input type="text" placeholder="Birincil Adres  *">
                                <input type="text" placeholder="İkincil Adres *">
                            </form>
                        </div>
                        <div class="form-two">
                            <form>
                                <input type="text" placeholder="Posta Kodu *">
                                <select>
                                    <option>-- Ülke --</option>
                                    <option>TÜRKİYE</option>
                                    <option>United States</option>
                                    <option>Bangladesh</option>
                                    <option>UK</option>
                                    <option>India</option>
                                    <option>Pakistan</option>
                                    <option>Ucrane</option>
                                    <option>Canada</option>
                                    <option>Dubai</option>
                                </select>
                                <select>
                                    <option>-- Şehir --</option>
                                    <option>ANKARA</option>
                                    <option>İSTANBUL</option>
                                    <option>KOCAELİ</option>
                                    <option>RİZE</option>
                                    <option>BURSA</option>
                                    <option>SAKARYA</option>
                                    <option>İZMİR</option>
                                    <option>ANTALYA</option>
                                </select>
                                <input type="password" placeholder="Şifreyi Onayla">
                                <input type="text" placeholder="İş Yeri Telefonu (İsteğe Bağlı) ">
                                <input type="text" placeholder="Cep Telefonu*">
                                <input type="text" placeholder="Fax">
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="order-message">
                        <p>Alışveriş Siparişi</p>
                        <textarea name="message" placeholder="Siparişinizle ilgili notlar, Teslimata İlişkin Özel Notlar" rows="16"></textarea>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
