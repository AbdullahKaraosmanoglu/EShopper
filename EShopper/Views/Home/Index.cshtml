@model EShopper.Models.ProductListModel

@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="left-sidebar">
                <h2>KATEGORİLER</h2>
                <div class="panel-group category-products" id="accordian">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
                                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                    Spor Giyim
                                </a>
                            </h4>
                        </div>
                        <div id="sportswear" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">The North Face</a></li>
                                    <li><a href="#">Nike </a></li>
                                    <li><a href="#">Under Armour </a></li>
                                    <li><a href="#">Slazenger </a></li>
                                    <li><a href="#">Puma</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordian" href="#mens">
                                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                    Erkek
                                </a>
                            </h4>
                        </div>
                        <div id="mens" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Fendi</a></li>
                                    <li><a href="#">Guess</a></li>
                                    <li><a href="#">Valentino</a></li>
                                    <li><a href="#">Dior</a></li>
                                    <li><a href="#">Versace</a></li>
                                    <li><a href="#">Armani</a></li>
                                    <li><a href="#">Prada</a></li>
                                    <li><a href="#">Dolce and Gabbana</a></li>
                                    <li><a href="#">Chanel</a></li>
                                    <li><a href="#">Gucci</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordian" href="#womens">
                                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                    Kadın
                                </a>
                            </h4>
                        </div>
                        <div id="womens" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="#">Fendi</a></li>
                                    <li><a href="#">Guess</a></li>
                                    <li><a href="#">Valentino</a></li>
                                    <li><a href="#">Dior</a></li>
                                    <li><a href="#">Versace</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a href="#">Outdoor</a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a href="#">Elbise</a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a href="#">Çanta</a></h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title"><a href="#">Ayakkabı</a></h4>
                        </div>
                    </div>
                </div>

                <div class="brands_products">
                    <h2>Markalar</h2>
                    <div class="brands-name">
                        <ul class="nav nav-pills nav-stacked">

                            <li>
                                <a href="@Url.Action("ProductsByBrand", "Home", new { brandName = "Nike" })">
                                    <span class="pull-right">(@ViewBag.NikeProducts.Count)</span>Nike
                                </a>

                            </li>


                            <li>
                                <a href="@Url.Action("ProductsByBrand", "Home", new { brandName = "Adidas" })">
                                    <span class="pull-right">(@ViewBag.AdidasProducts.Count)</span>Adidas
                                </a>
                            </li>

                            <li><a href="#"> <span class="pull-right">(27)</span>Under Armor</a></li>
                            <li><a href="#"> <span class="pull-right">(32)</span>Puma</a></li>
                            <li><a href="#"> <span class="pull-right">(5)</span>Slazenger</a></li>
                            <li><a href="#"> <span class="pull-right">(9)</span>The North Face</a></li>
                            <li><a href="#"> <span class="pull-right">(4)</span>Columbia</a></li>
                        </ul>
                    </div>
                </div>

                <div class="shipping text-center">
                    <img src="~/images/home/shipping.jpg" alt="" />
                </div>

            </div>
        </div>


        <div class="col-sm-9 padding-right">
            <div class="features_items">
                <h2 class="title text-center">YENİ SEZON</h2>
                <form>
                    @foreach (var item in Model.ProductModel.ProductList)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="@item.ImagePath" alt="" />
                                        <h2>@item.Price TL</h2>
                                        <p>@item.ProductName</p>
                                        <p>@item.Stock Stock Mevcut</p>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>@item.Price TL</h2>
                                            <p>@item.ProductName</p>
                                            <p>@item.ProductId ProductId</p>
                                            <button type="submit" class="btn btn-danger" style="width:100%" onclick="AddToCart(@item.ProductId);"> Sepete Ekle </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="choose">
                                    <button type="submit" class="btn btn-default" style="width:100%" onclick="AddToCart(@item.ProductId);"> Sepete Ekle </button>
                                </div>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

